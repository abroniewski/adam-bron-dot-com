---
import Layout from '~/layouts/PageLayout.astro';
import { fetchPosts, getRandomPost } from '~/utils/blog';
import { getFormattedDate } from '~/utils/utils';
import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';
import Image from '~/components/common/Image.astro';
import type { ImageMetadata } from 'astro';

const metadata = {
  title: 'Adam Bron',
  ignoreTitleTemplate: true,
};

// Fetch all posts and get a random one for featured capsule
const allPosts = await fetchPosts();
const featuredPost = await getRandomPost();
const featuredImage = featuredPost?.image ? (await findImage(featuredPost.image)) as ImageMetadata | string | undefined : undefined;

// Format date for archive list (YYYY-MM-DD)
const formatArchiveDate = (date: Date): string => {
  return date.toISOString().split('T')[0];
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen">
    <!-- Empty Space - Generous vertical whitespace -->
    <div class="h-32 md:h-48 lg:h-64"></div>

    <!-- Featured Capsule Section -->
    {featuredPost && (
      <section class="max-w-2xl mx-auto px-6 sm:px-6 mb-24 md:mb-32">
        <a href={getPermalink(featuredPost.permalink, 'post')} class="block group">
          <h2 class="text-2xl md:text-3xl font-light mb-2 text-default group-hover:text-primary transition-colors">
            {featuredPost.title}
          </h2>
          <time 
            datetime={String(featuredPost.publishDate)} 
            class="text-sm text-muted dark:text-slate-500 block mb-4"
          >
            {getFormattedDate(featuredPost.publishDate)}
          </time>
          
          {featuredImage ? (
            <div class="mt-6">
              <Image
                src={featuredImage}
                alt={featuredPost.title}
                class="w-full max-w-md rounded-sm opacity-90"
                widths={[400, 600]}
                sizes="(max-width: 600px) 400px, 600px"
                loading="lazy"
                decoding="async"
              />
            </div>
          ) : featuredPost.excerpt ? (
            <p class="text-muted dark:text-slate-400 text-lg leading-relaxed mt-4">
              {featuredPost.excerpt}
            </p>
          ) : featuredPost.textPreview ? (
            <p class="text-muted dark:text-slate-400 text-lg leading-relaxed mt-4">
              {featuredPost.textPreview}
            </p>
          ) : null}
        </a>
      </section>
    )}

    <!-- Empty Space -->
    <div class="h-16 md:h-24"></div>

    <!-- Archive List Section -->
    {allPosts.length > 0 && (
      <section class="max-w-2xl mx-auto px-6 sm:px-6 pb-16">
        <h3 class="text-sm font-medium text-muted dark:text-slate-500 mb-2 tracking-wide">
          All capsules
        </h3>
        <div class="border-t border-gray-200 dark:border-slate-700 mb-4"></div>
        <div class="space-y-1">
          {allPosts.map((post) => (
            <a
              href={getPermalink(post.permalink, 'post')}
              class="block text-default hover:text-primary transition-colors py-1"
            >
              <span class="text-sm text-muted dark:text-slate-500 font-mono mr-4">
                {formatArchiveDate(post.publishDate)}
              </span>
              <span class="text-base">{post.title}</span>
            </a>
          ))}
        </div>
      </section>
    )}
  </div>
</Layout>
