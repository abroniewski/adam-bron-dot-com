---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'The Lab',
};

const projects = [
  {
    name: 'Adam Voice System + Operating Tools',
    url: '/work/lab-adam-voice-and-operating-systems',
    description:
      'Detailed breakdown of the Adam-voice project plus active systems like daily digests, LinkedIn ops, and Railway lab publishing.',
    tag: 'System Card',
    internal: true,
  },
  {
    name: 'Ops Kanban',
    url: 'https://opskanban.adambron.com',
    description:
      'Live operations board and automation cockpit for project tracking, execution flow, and cron visibility.',
    tag: 'Operations',
  },
  {
    name: 'Pride & Prejudice Watch Site',
    url: 'https://pnp.adambron.com',
    description:
      'Private streaming experience for cast, friends, and family, with secure access and subtitle controls.',
    tag: 'Media App',
  },
  {
    name: 'Bicycles of the Netherlands',
    url: 'https://fiets.adambron.com',
    description:
      'Visual journal project documenting Dutch life through bicycle photography and lightweight storytelling.',
    tag: 'Website',
  },
  {
    name: 'Adam & Beata Wedding Invite',
    url: 'https://wedding.adambron.com',
    description:
      'Interactive wedding invite and RSVP experience with timeline, FAQs, and event details.',
    tag: 'Event Site',
  },
];
---

<Layout metadata={metadata}>
  <section class="max-w-5xl mx-auto px-6 py-16">
    <div class="mb-10">
      <h1 class="text-4xl font-semibold mb-3">The Lab</h1>
      <p class="text-muted dark:text-slate-400 text-lg max-w-3xl">
        A live index of projects running on Adamâ€™s subdomains.
      </p>
    </div>

    <div class="grid gap-5 sm:grid-cols-1 md:grid-cols-2">
      {projects.map((project) => (
        <article class="rounded-xl border border-gray-200 dark:border-slate-700 bg-white/70 dark:bg-slate-900/40 p-5">
          <div class="flex items-center justify-between gap-3 mb-3">
            <h2 class="text-xl font-medium">
              <a href={project.url} target={project.internal ? undefined : '_blank'} rel={project.internal ? undefined : 'noopener noreferrer'} class="hover:underline">
                {project.name}
              </a>
            </h2>
            <span class="text-xs px-2 py-1 rounded-full bg-slate-100 dark:bg-slate-800 text-muted dark:text-slate-300">{project.tag}</span>
          </div>
          <p class="text-muted dark:text-slate-400 mb-4 leading-relaxed">{project.description}</p>
          <a
            href={project.url}
            target={project.internal ? undefined : '_blank'}
            rel={project.internal ? undefined : 'noopener noreferrer'}
            class="inline-flex items-center text-primary hover:underline break-all"
          >
            {project.url}
          </a>
        </article>
      ))}
    </div>
  </section>
</Layout>
