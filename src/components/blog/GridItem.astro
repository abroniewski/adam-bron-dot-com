---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';
import { Icon } from 'astro-icon/components';

import PostTags from '~/components/blog/Tags.astro';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';
---

<article
  class="mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade bg-gray-50 dark:bg-slate-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200"
>
  <div class="mb-3">
    <span class="text-sm text-muted dark:text-slate-400">
      <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5 mr-1 dark:text-gray-400" />
      <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
    </span>
  </div>

  <h3 class="text-xl sm:text-2xl font-bold leading-tight mb-4 font-heading dark:text-slate-300">
    {
      link ? (
        <a class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={link}>
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>

  {
    post.tags && Array.isArray(post.tags) && post.tags.length > 0 && (
      <footer class="mt-4">
        <PostTags tags={post.tags} />
      </footer>
    )
  }
</article>
